{
  "structure": {
    "backendPath": "backend",
    "frontendPath": "frontend",
    "testsPath": "tests",
    "ignorePaths": [],
    "typePaths": [],
    "helperPaths": []
  },
  "layeredArchitecture": {
    "enabled": true,
    "layers": [
      {
        "name": "Handler",
        "path": ["backend/handler/**"],
        "canOnlyDependOnLayers": []
      },
      {
        "name": "Service",
        "path": ["backend/service/**"],
        "canOnlyDependOnLayers": ["Handler"]
      },
      {
        "name": "Controller",
        "path": ["backend/controller/**"],
        "canOnlyDependOnLayers": ["Service"]
      }
    ]
  }
}
